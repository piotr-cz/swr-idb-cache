{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "ES2018",
    "noEmitOnError": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["dist"],
}
